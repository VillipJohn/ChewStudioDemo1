        android:defaultValue="-1"
        android:entries="@array/pref_sex_list_titles"
        android:entryValues="@array/pref_sex_list_values"
        android:key="userSexPref"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Пол:" />
